---
interface Props {
    href: string;
    class?: string;
}

const { href, class: className } = Astro.props;
---

<a
    href={href}
    class:list={[
        'inline-flex items-center justify-center px-6 py-2 border border-main hover:bg-main hover:text-white dark:hover:text-black transition-colors duration-200',
        className
    ]}
>
    <slot />
</a>